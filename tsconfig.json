{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "esModuleInterop": true,
      "strict": true,
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "outDir": "./dist",
      "typeRoots": ["./node_modules/@types", "./src/common"],
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  